{
  "name": "unplug-social-backend",
  "version": "1.0.0",
  "description": "Backend service for Unplug social features",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "start:simple": "node dist/simple-server.js",
    "dev": "nodemon src/server.ts",
    "dev:simple": "nodemon src/simple-server.ts",
    "build": "tsc",
    "build:simple": "tsc -p tsconfig.simple.json && echo Simple backend built successfully",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "docker:build": "docker build -t unplug-backend .",
    "docker:run": "docker run -p 3000:3000 unplug-backend"
  },
  "keywords": [
    "social",
    "leaderboards",
    "achievements",
    "community",
    "real-time",
    "websockets"
  ],
  "author": "Unplug Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.9.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.4",
    "pg": "^8.11.3",
    "knex": "^2.5.1",
    "redis": "^4.6.7",
    "ioredis": "^5.3.2",
    "bull": "^4.11.3",
    "node-cron": "^3.0.2",
    "winston": "^3.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "aws-sdk": "^2.1427.0",
    "nodemailer": "^6.9.4",
    "web-push": "^3.6.3",
    "uuid": "^9.0.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "sanitize-html": "^2.11.0",
    "express-slow-down": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.8",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/compression": "^1.7.2",
    "@types/morgan": "^1.9.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/pg": "^8.10.2",
    "@types/redis": "^4.0.11",
    "@types/bull": "^4.10.0",
    "@types/node-cron": "^3.0.8",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/nodemailer": "^6.4.9",
    "@types/web-push": "^3.6.3",
    "@types/uuid": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/sanitize-html": "^2.9.0",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "@types/express-slow-down": "^1.3.2",
    "typescript": "^5.1.6",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
