{
  "name": "offtime-tracker",
  "main": "app/app.ts",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "ns build",
    "build:android": "ns build android",
    "build:ios": "ns build ios",
    "build:ios:release": "ns build ios --for-device --release",
    "build:ios:debug": "ns build ios --for-device",
    "build:ios:script": "chmod +x scripts/build-ios.sh && ./scripts/build-ios.sh",
    "build:ios:release:script": "chmod +x scripts/build-ios.sh && ./scripts/build-ios.sh -r",
    "build:ios:clean": "chmod +x scripts/build-ios.sh && ./scripts/build-ios.sh -c -r",
    "run:android": "ns run android",
    "run:ios": "ns run ios",
    "debug:android": "ns debug android",
    "debug:ios": "ns debug ios",
    "preview": "ns preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "ns clean",
    "prepare:ios": "ns prepare ios && open platforms/ios/*.xcworkspace",
    "deploy:pwa": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 pwa production",
    "deploy:backend": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 backend production",
    "deploy:test": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 test",
    "deploy:all": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 all production",
    "ci:test": "npm run deploy:test",
    "ci:build": "npm run deploy:all"
  },
  "dependencies": {
    "@nativescript/background-http": "^6.0.0",
    "@nativescript/biometrics": "^1.3.1",
    "@nativescript/camera": "^7.0.0",
    "@nativescript/core": "~8.9.0",
    "@nativescript/email": "^2.0.0",
    "@nativescript/firebase": "~11.1.3",
    "@nativescript/firebase-admob": "^3.3.2",
    "@nativescript/geolocation": "^8.0.0",
    "@nativescript/imagepicker": "^5.0.0",
    "@nativescript/local-notifications": "~5.0.0",
    "@nativescript/secure-storage": "^3.0.3",
    "@nativescript/social-share": "^2.0.0",
    "@nativescript/zip": "^5.0.0",
    "nativescript-phone": "^3.0.0",
    "nativescript-purchase": "^2.0.14"
  },
  "devDependencies": {
    "@nativescript/preview-cli": "1.0.14",
    "@nativescript/stackblitz": "^0.0.8",
    "@nativescript/tailwind": "^2.1.0",
    "@nativescript/types": "~8.9.0",
    "@nativescript/webpack": "^4.1.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "tailwindcss": "~3.4.0",
    "ts-jest": "^29.1.0",
    "typescript": "~5.4.0"
  },
  "overrides": {
    "xmldom": "^0.6.0",
    "plist": "^3.1.0",
    "semver": "^7.6.0",
    "postcss": "^8.4.31",
    "braces": "^3.0.3",
    "ejs": "^3.1.10",
    "serialize-javascript": "^6.0.0",
    "terser": "^5.19.0",
    "properties-reader": "^2.3.0",
    "micromatch": "^4.0.8",
    "simple-plist": "^1.3.1",
    "global-modules-path": "^3.0.0",
    "ssri": "^10.0.0",
    "cacache": "^18.0.0",
    "readdirp": "^3.6.0",
    "anymatch": "^3.1.3",
    "chokidar": "^3.5.3",
    "watchpack": "^2.4.0"
  }
}
